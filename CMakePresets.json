{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 3
    },
    "include": [
        "cmake/presets/config-base.json"
    ],
    "configurePresets": [
        {
            "name": "tests-debug",
            "displayName": "Configure for testing generic modules (debug)",
            "description": "Configure for testing generic modules (debug)",
            "inherits": "_config-base",
            "binaryDir": "${sourceDir}/build/tests/Debug",
            "cacheVariables": {
                "CMAKE_DEFAULT_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "BUILD_UNIT_TESTS": "ON",
                "PLATFORM_CONFIG": "GENERIC"
            }
        },
        {
            "name": "tests-release",
            "displayName": "Configure for testing generic modules (release)",
            "description": "Configure for testing generic modules (release)",
            "inherits": "_config-base",
            "binaryDir": "${sourceDir}/build/tests/Release",
            "cacheVariables": {
                "CMAKE_DEFAULT_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release",
                "BUILD_UNIT_TESTS": "ON",
                "PLATFORM_CONFIG": "GENERIC"
            }
        },
        {
            "name": "tests-debug-posix",
            "displayName": "Configure for testing POSIX modules (debug)",
            "description": "Configure for testing POSIX modules (debug)",
            "inherits": "_config-base",
            "binaryDir": "${sourceDir}/build/tests/posix/Debug",
            "cacheVariables": {
                "CMAKE_DEFAULT_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "BUILD_UNIT_TESTS": "ON",
                "PLATFORM_CONFIG": "POSIX"
            }
        },
        {
            "name": "tests-release-posix",
            "displayName": "Configure for testing POSIX modules (release)",
            "description": "Configure for testing POSIX modules (release)",
            "inherits": "_config-base",
            "binaryDir": "${sourceDir}/build/tests/posix/Release",
            "cacheVariables": {
                "CMAKE_DEFAULT_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release",
                "BUILD_UNIT_TESTS": "ON",
                "PLATFORM_CONFIG": "POSIX"
            }
        },
        {
            "name": "tests-debug-s32k1xx",
            "displayName": "Configure for testing S32K1XX modules (debug)",
            "description": "Configure for testing S32K1XX modules (debug)",
            "inherits": "_config-base",
            "binaryDir": "${sourceDir}/build/tests/s32k1xx/Debug",
            "cacheVariables": {
                "CMAKE_DEFAULT_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "BUILD_UNIT_TESTS": "ON",
                "PLATFORM_CONFIG": "S32K1XX"
            }
        },
        {
            "name": "tests-release-s32k1xx",
            "displayName": "Configure for testing S32K1XX modules (release)",
            "description": "Configure for testing S32K1XX modules (release)",
            "inherits": "_config-base",
            "binaryDir": "${sourceDir}/build/tests/s32k1xx/Release",
            "cacheVariables": {
                "CMAKE_DEFAULT_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release",
                "BUILD_UNIT_TESTS": "ON",
                "PLATFORM_CONFIG": "S32K1XX"
            }
        },
        {
            "name": "posix",
            "displayName": "POSIX-compliant configuration",
            "description": "Configure for POSIX-compliant environment",
            "inherits": "_config-base",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "BUILD_REFERENCE": "ON",
                "BUILD_TARGET_PLATFORM": "POSIX"
            }
        },
        {
            "name": "s32k148-gcc",
            "generator": "Ninja Multi-Config",
            "displayName": "S32K148 configuration (GCC)",
            "description": "Configure for S32K148 platform using ARM GCC toolchain",
            "inherits": "_config-base",
            "toolchainFile": "${sourceDir}/cmake/toolchains/ArmNoneEabi-gcc.cmake",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "BUILD_REFERENCE": "ON",
                "BUILD_TARGET_PLATFORM": "S32K148EVB",
                "CMAKE_ASM_FLAGS_RELWITHDEBINFO": "-g3",
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo;Debug;Release",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-g3 -O2 -DNDEBUG",
                "CMAKE_DEFAULT_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "s32k148-clang",
            "generator": "Ninja Multi-Config",
            "displayName": "S32K148 configuration (Clang)",
            "description": "Configure for S32K148 platform using ARM Clang toolchain",
            "inherits": "_config-base",
            "toolchainFile": "${sourceDir}/cmake/toolchains/ArmNoneEabi-clang.cmake",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "BUILD_REFERENCE": "ON",
                "BUILD_TARGET_PLATFORM": "S32K148EVB",
                "CMAKE_ASM_FLAGS_RELWITHDEBINFO": "-g3",
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo;Debug;Release",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-g3 -O2 -DNDEBUG",
                "CMAKE_DEFAULT_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
